.main style='background: url(#{image_path('landing/slider/nasa.png')}) no-repeat; background-size: cover;'
  .fill
    .container.text-left
      .row.ctas
        .col-sm-6
          h2.text-white= t('.serviceplace')
          h1 == t('.serviceplace_blurb')
          p
            = link_to t('.create_your_shop'),
              serviceplace_path,
              class: 'btn btn-blue-solid',
              role: 'button'
            = link_to t('.explore_serviceplace'),
              serviceplace_path,
              class: 'btn btn-blue-outline',
              role: 'button'
        .col-sm-6
          h2.text-white = t('.custom_projects')
          h1 == t('.best_place_best_talents_hero')
          p
            = link_to t('.find_talent'),
              new_estimate_path,
              class: 'btn btn-blue-solid',
              role: 'button'
            = link_to t('.join_us'),
              new_user_registration_path,
              class: 'btn btn-blue-outline',
              role: 'button'

