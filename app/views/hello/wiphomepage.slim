section.wip-main-background.hero
  = image_tag 'wip_shape2.png', :class => 'wip_shape2', srcset: { "wip_shape2@2x.png": "2x" }
  = image_tag 'wip_shape3.png', :class => 'wip_shape3', srcset: { "wip_shape3@2x.png": "2x" }
  = image_tag 'icons/svgs/resume-amico_bg.svg',  class: 'resume-amico_bg', alt: ''
  .container
    .row.flex-wrap.d-flex.align-items-center
      .col-md-7
        .hello-title = t("hello.index.ecommerce_marking_title")
        .hello-subtitle.mt-5 = t("hello.index.specialized_personal")
        .hello-subtitle = t("hello.index.realization_of_projects")
      .col-md-5
        = image_tag 'icons/svgs/resume-amico_new.svg',  class: 'full-width', alt: ''

section
  .container
    .mb-2.hello-subtitle.blue-color.text-center = "#{t("hello.index.only_have_specialties")} - #{Specialty.all.length} #{t("hello.index.offer_specialties")}"

    .row.flex-wrap.d-flex.align-items-center
      .col-md-2
        = image_tag 'icons/svgs/computer-troubleshooting-amico.svg',  class: 'full-width', alt: ''
      .col-md-10
        h2.section-title = "#{@information_specialties.length} #{t("hello.index.specialties_information")}"
    
    .mt-3
      - @information_categories.in_groups_of(4, false).each do |group|
        .row.flex-wrap.mb-3.font-14
          - group.each do |businessCategory|
            - if businessCategory.specialties.present?
              .col-md-3.mt-3
                a.td-category-name.column-truncate href="/hello/wiphomepage/results/?section=categories&id=#{businessCategory.id}" = "#{businessCategory.name}"
                - @category_specialties = businessCategory.specialties.order(:title)
                - @category_specialties.each do |specialty|
                  .column-truncate
                    a href=show_results_path(specialty) data-placement="bottom" data-toggle="tooltip" title="#{sector_exp_years(specialty)}" = "#{specialty.title}"
                    br

.container
  .row.flex-wrap
    .col-md-12
      .section-line

section
  .container
    .row.flex-wrap.d-flex.align-items-center
      .col-md-2
        = image_tag 'icons/svgs/starting-a-business-project-amico.svg',  class: 'full-width', alt: ''
      .col-md-10
        h2.section-title = "#{@marketing_specialties.length} #{t("hello.index.specialties_marketing")}"
    
