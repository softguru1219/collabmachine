<div class="middle-box text-center loginscreen animated fadeInDown">
  <div>
    <%= render 'layouts/collab_machine_logo', klasses: 'full-width' %>

    <p>
      <%= t('sessions.login_form_blurb')  %>
    </p>

    <%= render 'shared/notices_banner' %>

    <%= form_for resource,
          as: resource_name,
          url: session_path(resource_name),
          html: { class: 'new_user m-t', role: 'form' } do |f| %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('users.email').upf, required: '', value: current_user.try(:email) %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t('users.password').upf %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label t('sessions.remember_me') %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit t('sessions.login'), class: 'btn btn-primary block full-width m-b' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
